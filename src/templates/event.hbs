<div class="card">
     <img class="modal-small-picto" src="{{images.3.url}}" alt="{{name}}">
    <div class="modal-detalis-event">
        <div class="poster">
            <img  src="{{images.5.url}}" alt="{{name}}">
        </div>
        
        <div class="modal-info-event">
            <h3 class="info-event-title">INFO</h3>
            <p class="info-event-text"><a href="{{_embedded.attractions.[0].url}}" class="eventinfo-link" target="_blank">All the details about the artist and
                the event</a></p>
            <h3 class="info-event-title">WHEN</h3>
            <p class="info-event-text">{{dates.start.localDate}} <br> {{dates.start.localTime}} ({{dates.timezone}}) </p>
            <h3 class="info-event-title">WHERE</h3>
            <p class="info-event-text">{{_embedded.venues.[0].city.name}}, {{_embedded.venues.[0].country.name}} <br>
                {{_embedded.venues.[0].name}}</p>
            <h3 class="info-event-title">WHO</h3>
            <p class="info-event-text">{{name}}</p>
            <h3 class="info-event-title">PRICES</h3>
            {{#each priceRanges}}
            <svg width="29" height="20">
                <use href="././images/symbol-defs.svg#barcode"></use>
            </svg>
            <p class="info-event-text">
                
            {{this.type}} {{this.min}} - {{this.max}} {{this.currency}}</p>
            <a href={{../url}} class="lightbox__button link" target="_blank">BUY TICKETS</a>
            {{/each}}
            </div>
            
        </div>
        {{!-- <button type="button" class="lightbox__button" data-action="more-events">MORE FROM THIS AUTHOR</button> --}}
</div>